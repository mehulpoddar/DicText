<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/home1" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/dic"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/dic1"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/dicp"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/dicp1"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/dicm"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/dicm1"
            android:layout_gravity="center_vertical" />

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="75dp"
            android:layout_height="115dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="bottom" >
            
            <Button
            android:id="@+id/control"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/control"
            android:layout_gravity="top"
            android:layout_marginTop="32dp" />

            <LinearLayout
                android:id="@+id/drawer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/drawer" >

                <Button
                    android:id="@+id/rev"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rev"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:id="@+id/pause"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/pause1"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:id="@+id/fwd"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/fwd"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
            
        </FrameLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/from"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:hint="@string/from" >

        <requestFocus />
    </EditText>
    
    <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="-45dp"
        	android:layout_marginLeft="140dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/gap"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="240dp"
        android:hint="@string/gap" />

    <EditText
        android:id="@+id/dictate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/dictate" />

    <Button
        android:id="@+id/next"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="135dp"
        android:background="@null" />

    <Button
        android:id="@+id/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/info" />

</LinearLayout>